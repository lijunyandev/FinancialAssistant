<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/notepad_title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/yh_main_of_navigation_bg"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/notepad_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/notepad_main_title"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/notepad_main_back_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/back_button_selector" />

        <Button
            android:id="@+id/notepad_main_new"
            android:layout_width="33dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/add_button_selector" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/notepad_nothing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/detail_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="205dp"
            android:text="您还未添加备忘录，赶快去添加吧"
            android:textColor="#ff545454"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/empty_icon"
            android:layout_width="131dp"
            android:layout_height="132dp"
            android:layout_above="@+id/detail_author"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:src="@drawable/empty_view_logo_light" />
    </RelativeLayout>

</LinearLayout>